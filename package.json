{
  "name": "ember-leaflet-scaffold",
  "version": "0.1.0",
  "description": "Basic 'app' integrating Ember and Leaflet, mainly as an example or a quick start repo.",
  "homepage": "https://github.com/AppGeo/ember-leaflet-scaffold",
  "author": "Ilya Radchenko",
  "license": "MIT",
  "main": "server.js",
  "browserify-shim": {
    "jquery": "jQuery",
    "handlebars": "Handlebars",
    "ember": {
      "exports": "Ember",
      "depends": [
        "jquery:jQuery",
        "handlebars:Handlebars"
      ]
    },
    "ember-data": {
      "exports": "DS",
      "depends": [
        "ember"
      ]
    },
    "collapse": {
      "depends": [
        "jquery:jQuery"
      ]
    }
  },
  "browser": {
    "jquery": "./bower_components/jquery/dist/jquery.js",
    "handlebars": "./bower_components/handlebars/handlebars.js",
    "ember": "./bower_components/ember/ember.js",
    "ember-data": "./bower_components/ember-data/ember-data.js",
    "collapse": "./bower_components/bootstrap/js/collapse.js"
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "bower install && npm run build",
    "build-lib": "browserify -r jquery -r handlebars -r ember -r ember-data -r collapse -r leaflet > public/scripts/libs.js",
    "build-app": "browserify ./client/.index.js > ./public/scripts/application.js",
    "build": "npm run build-lib && npm run build-app && cp ./bower_components/font-awesome/fonts/* ./public/fonts/"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/AppGeo/ember-leaflet-scaffold.git"
  },
  "bugs": {
    "url": "https://github.com/AppGeo/ember-leaflet-scaffold/issues"
  },
  "keywords": [
    "ember",
    "leaflet",
    "scaffold"
  ],
  "devDependencies": {
    "matchdep": "~0.3.0",
    "browserify-shim": "^3.4.1",
    "ember-stream-generator": "^0.3.2",
    "browserify": "^3.38.1",
    "connect-livereload": "^0.3.2"
  },
  "dependencies": {
    "express": "~3.4.8",
    "leaflet": "^0.7.2"
  }
}
